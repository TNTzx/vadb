model Artist {
    id           Int          @id @default(autoincrement())
    name         String
    safeName     String?
    aliases      String?
    description  String
    notes        String?
    genre        String?
    tracks       Int          @default(0)
    status       Status       @default(NONE)
    availability Availability @default(NONE)
    addedAt      DateTime     @default(now())
    updatedAt    DateTime     @updatedAt

    rights       Right[]
    socials      Social[]
}

model Right {
    id    Int     @id @default(autoincrement())
    name  String
    value Boolean

    artist   Artist  @relation(fields: [artistId], references: [id])
    artistId Int
}

model Social {
    id       Int     @id @default(autoincrement())
    link     String
    type     String
    icon     String?

    artist   Artist  @relation(fields: [artistId], references: [id])
    artistId Int
}

enum Status {
    NONE
    COMPLETED
    NO_CONTACT
    PENDING
    REQUESTED
}

enum Availability {
    NONE
    VERIFIED
    DISALLOWED
    CONTACT_REQUIRED
    VARIES
}